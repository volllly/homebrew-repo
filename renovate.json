{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-tags"
      ],
      "commitMessageTopic": "Homebrew Formula {{depName}}",
      "fileMatch": [
        "^Formula/[^/]+[.]rb$"
      ]
    }
  ]
}
